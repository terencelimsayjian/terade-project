<h2>Create Message</h2>

<form class="new-message" method="post" action="/messages">
  <input type="hidden" value=<%= ownerUser._id %> name="ownerUserID" />
  <input type="hidden" value=<%= listing._id %> name="listingID" />
  <input type="hidden" value=<%= user._id %> name="userID" />
  <div class="row">
    <div class="form-group col-md-12">
      <label for="messageInput">Message</label>
      <input type="text" class="form-control" id="messageInput" placeholder="Write Message Here" name="message">
    </div>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>

</form> <br>

<%= ownerUser %> <br>
<%= ownerUser.local.username %> <br>
<%= listing %> <br>
<%= listing.name %> <br>
<%= user %> <br>
