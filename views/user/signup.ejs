<h2>Signup</h2>

<% if(message.length > 0) { %>
  <div class="alert alert-danger">
    <%= message %>
  </div>
<% } %>

<form class="new-user" action="/users/signup" method="post">
  <div class="row">
    <div class="form-group col-md-6">
      <label for="usernameInput">User Name</label>
      <input type="text" class="form-control" id="usernameInput" placeholder="User Name" name="user[local][username]">
    </div>
    <div class="form-group col-md-6">
      <label for="nameInput">Name</label>
      <input type="text" class="form-control" id="nameInput" placeholder="Name" name="user[local][name]">
    </div>
    <div class="form-group col-md-6">
      <label for="emailInput">Email</label>
      <input type="text" class="form-control" id="emailInput" placeholder="Email" name="user[local][email]">
    </div>
    <div class="form-group col-md-6">
      <label for="passwordInput">Password</label>
      <input type="text" class="form-control" id="passwordInput" placeholder="Password" name="user[local][password]">
    </div>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
