<h2>My Listings</h2>

<ul>
  <% data.forEach(function (listing) { %>
    <li>
      <strong>Listing Name: </strong><%= listing.name %> <br>
      <strong>Listing Description: </strong><%= listing.description %> <br>
      <strong>List Date: </strong><%= listing.listdate %> <br>
      <strong>Availibility: </strong><%= listing.availability %> <br>
      <strong>User ID: </strong><%= listing.user_id %> <br>
      <strong>Book ID: </strong><%= listing._id %> <br>

      <form class="btn" method="POST" action="/trades">
        <input type="hidden" value=<%= listing._id %> name="proposerListingID" />
        <input type="hidden" value=<%= userID %> name="proposeeUserID" />
        <input type="hidden" value=<%= listingID %> name="proposeeListingID" />
        <button type="submit" class="btn btn-default">Offer Book</button>
      </form>
    </li>
  <% }) %>

</ul>
