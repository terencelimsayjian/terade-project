<h2><%= header %></h2>

<% if (user) { %>
  <form class="new-listing" method="post" action="/listings">
    <div class="row">
      <div class="form-group col-md-6">
        <label for="listingNameInput">Name</label>
        <input type="text" class="form-control" id="listingNameInput" placeholder="Item Name" name="listing[name]">
      </div>
      <div class="form-group col-md-6">
        <label for="listingDescription">Description</label>
        <input type="text" class="form-control" id="listingDescription" placeholder="Description" name="listing[description]">
      </div>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
<% } %>

  <% data.forEach(function (listing) { %>
    <div class="col-md-4 listing">
    <a href= <%= "/listings/" + listing._id %> >
      <h4 class="listingname"><%= listing.name %></h4>
    </a>
    <h5 class="listingdescription"><%= listing.description %></h5>
    <p class="listingusername">Listed by: <%= listing.user_id.local.username %></p>
    <p class="listingdate">Listed:  <%= listing.listdate %> </p>
    </div>
  <% }) %>
