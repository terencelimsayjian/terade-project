<h2>Edit Listing</h2>

<form class="edit-listing" method="post" action=<%= "/listings/" + data._id + "?_method=PUT"%> >
  <div class="row">
    <div class="form-group col-md-6">
      <label for="listingNameInput">Name</label>
      <input type="text" class="form-control" id="listingNameInput" placeholder="Item Name" name="listing[name]">
    </div>
    <div class="form-group col-md-6">
      <label for="listingDescription">Description</label>
      <input type="text" class="form-control" id="listingDescription" placeholder="Description" name="listing[description]">
    </div>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>

<ul>
    <li>
      <strong>Listing Name: </strong><%= data.name %> <br>
      <strong>Listing Description: </strong><%= data.description %> <br>
      <strong>List Date: </strong><%= data.listdate %> <br>
      <strong>Availibility: </strong><%= data.availability %> <br>
      <strong>User ID: </strong><%= data.user_id %> <br>
      <strong>Book ID: </strong><%= data._id %> <br>
    </li>
</ul>

