<h2>Login</h2>

<% if(message.length > 0) { %>
  <div class="alert alert-danger">
    <%= message %>
  </div>
<% } %>

<form class="user-login" method="post">
  <div class="row">
    <div class="form-group col-md-6">
      <label for="emailInput">Email</label>
      <input type="email" class="form-control" id="emailInput" placeholder="Email" name="user[local][email]">
    </div>
    <div class="form-group col-md-6">
      <label for="passwordInput">Password</label>
      <input type="password" class="form-control" id="passwordInput" placeholder="Password" name="user[local][password]">
    </div>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
